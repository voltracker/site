---
import BaseLayout from '../../layouts/BaseLayout.astro';
import BlogCard from '../../components/BlogCard.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<BaseLayout title="Blog â€” voltracker" description="Blog posts about things I'm building and learning.">
  <h1 class="text-3xl font-bold tracking-tight text-gray-900">Blog</h1>
  {posts.length > 0 ? (
    <div class="mt-8 space-y-8">
      {posts.map((post) => (
        <BlogCard
          title={post.data.title}
          date={post.data.date}
          description={post.data.description}
          tags={post.data.tags}
          slug={post.slug}
        />
      ))}
    </div>
  ) : (
    <p class="mt-8 text-gray-500">No posts yet.</p>
  )}
</BaseLayout>
