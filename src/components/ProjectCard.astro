---
interface Props {
  title: string;
  description: string;
  tags: string[];
  url?: string;
  repo?: string;
}

const { title, description, tags, url, repo } = Astro.props;
---

<article class="rounded-lg border border-gray-200 p-5">
  <h3 class="text-lg font-semibold text-gray-900">{title}</h3>
  <p class="mt-2 text-gray-600">{description}</p>
  {tags.length > 0 && (
    <div class="mt-3 flex flex-wrap gap-2">
      {tags.map((tag) => (
        <span class="rounded-full bg-gray-100 px-2.5 py-0.5 text-xs text-gray-600">
          {tag}
        </span>
      ))}
    </div>
  )}
  {(url || repo) && (
    <div class="mt-4 flex gap-4 text-sm">
      {url && (
        <a href={url} class="text-blue-600 hover:underline" target="_blank" rel="noopener noreferrer">
          Live site
        </a>
      )}
      {repo && (
        <a href={repo} class="text-blue-600 hover:underline" target="_blank" rel="noopener noreferrer">
          Source code
        </a>
      )}
    </div>
  )}
</article>
