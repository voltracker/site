---
interface Props {
  title: string;
  date: Date;
  description: string;
  tags: string[];
  slug: string;
}

const { title, date, description, tags, slug } = Astro.props;
const formattedDate = date.toLocaleDateString('en-GB', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<article class="group">
  <a href={`/blog/${slug}`} class="block">
    <time class="text-sm text-gray-500" datetime={date.toISOString()}>
      {formattedDate}
    </time>
    <h3 class="mt-1 text-lg font-semibold text-gray-900 group-hover:text-blue-600 transition-colors">
      {title}
    </h3>
    <p class="mt-1 text-gray-600">{description}</p>
    {tags.length > 0 && (
      <div class="mt-2 flex flex-wrap gap-2">
        {tags.map((tag) => (
          <span class="rounded-full bg-gray-100 px-2.5 py-0.5 text-xs text-gray-600">
            {tag}
          </span>
        ))}
      </div>
    )}
  </a>
</article>
